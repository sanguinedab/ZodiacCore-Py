[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "A modern web service built with ZodiacCore"
readme = "README.md"
requires-python = ">=3.12"
dependencies = [
    "zodiac-core[sql]",
    "dependency-injector>=4.41.0",
    "aiosqlite>=0.20.0",
    "uvicorn>=0.30.0",
]

[tool.setuptools.packages.find]
where = ["."]
include = ["app*"]

[tool.ruff]
line-length = 120
target-version = "py312"

